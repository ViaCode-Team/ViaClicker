<Window
    x:Class="ViaClicker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ViaClicker"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViaClicker"
    Width="800"
    Height="650"
    Background="{StaticResource MaterialDesignLightSeparatorBackground}"
    Foreground="{StaticResource MaterialDesignBody}"
    ResizeMode="NoResize"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <Thickness x:Key="CardPadding">18</Thickness>

            <Style x:Key="SectionHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card
            Grid.Column="0"
            Padding="{StaticResource CardPadding}"
            materialDesign:ElevationAssist.Elevation="Dp8">
            <StackPanel>

                <TextBlock Style="{StaticResource SectionHeader}" Text="Click settings" />

                <!--  Interval and units  -->
                <StackPanel
                    Margin="0,4,0,12"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel Width="120">
                        <TextBox
                            Padding="10"
                            VerticalContentAlignment="Center"
                            materialDesign:HintAssist.Hint="Interval"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            FontSize="14"
                            Foreground="{StaticResource MaterialDesignBody}"
                            Text="{Binding IntervalText, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <ComboBox
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        d:SelectedValue="ms"
                        SelectedValue="{Binding IntervalUnit}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Tag="ms">Milliseconds (ms)</ComboBoxItem>
                        <ComboBoxItem Tag="s">Seconds (s)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!--  Mode and count  -->
                <TextBlock Margin="0,6,0,6" Text="Mode" />
                <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                    <RadioButton
                        x:Name="ModeContinuous"
                        Margin="0,0,12,0"
                        Content="Continuous"
                        IsChecked="{Binding IsContinuous, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignRadioButton}" />
                    <RadioButton
                        x:Name="ModeLimited"
                        Content="Limited"
                        IsChecked="{Binding IsLimited, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignRadioButton}" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,0,12"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBox
                        Width="140"
                        materialDesign:HintAssist.Hint="Click count"
                        IsEnabled="{Binding IsLimited}"
                        Text="{Binding ClickCount, UpdateSourceTrigger=PropertyChanged}" />
                    <ToggleButton
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        IsChecked="{Binding UseRandomInterval, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                </StackPanel>

                <!--  Mouse button selection  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Mouse button" />
                <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                    <RadioButton
                        Margin="0,0,10,0"
                        Content="Left"
                        GroupName="MouseBtn"
                        IsChecked="True"
                        Style="{StaticResource MaterialDesignRadioButton}" />
                    <RadioButton
                        Margin="0,0,10,0"
                        Content="Right"
                        GroupName="MouseBtn"
                        Style="{StaticResource MaterialDesignRadioButton}" />
                    <RadioButton
                        Content="Middle"
                        GroupName="MouseBtn"
                        Style="{StaticResource MaterialDesignRadioButton}" />
                </StackPanel>

                <!--  Hotkey  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Hotkey" />
                <StackPanel Margin="0,0,0,18" Orientation="Horizontal">
                    <TextBox
                        x:Name="HotkeyTextBox"
                        Width="220"
                        VerticalContentAlignment="Center"
                        materialDesign:HintAssist.Hint="Press a key to bind"
                        IsReadOnly="True"
                        Text="{Binding HotkeyDisplay}" />
                    <Button
                        Margin="8,0,0,0"
                        Command="{Binding ClearHotkeyCommand}"
                        Content="Clear"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>

                <!--  Additional options  -->
                <TextBlock Style="{StaticResource SectionHeader}" Text="Advanced" />
                <StackPanel Margin="0,0,0,8" Orientation="Vertical">
                    <CheckBox
                        Margin="0,6,0,0"
                        Content="Stop when window is active"
                        IsChecked="{Binding StopOnActiveWindow}"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Margin="0,6,0,0"
                        Content="Start with system"
                        IsChecked="{Binding StartWithSystem}"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                    <CheckBox
                        Margin="0,6,0,0"
                        Content="Confirm before start"
                        IsChecked="{Binding ConfirmBeforeStart}"
                        Style="{StaticResource MaterialDesignCheckBox}" />
                </StackPanel>

                <!--  Controls  -->
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="40"
                        Margin="0,0,12,0"
                        Command="{Binding StartCommand}"
                        Content="Start"
                        IsEnabled="{Binding CanStart}"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button
                        Width="120"
                        Height="40"
                        Command="{Binding StopCommand}"
                        Content="Stop"
                        IsEnabled="{Binding IsRunning}"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>

            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
